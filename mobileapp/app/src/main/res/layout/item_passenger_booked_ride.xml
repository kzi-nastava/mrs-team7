<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvPassengerRideDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.08."
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvPassengerRideTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:30"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPassengerRideStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Scheduled"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#059669"
                android:background="@drawable/bg_status_scheduled"/>
        </LinearLayout>

        <!-- Route -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_pickup"/>

                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:background="#E5E7EB"/>

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_destination"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPassengerRideFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pickup Address"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/tvPassengerRideTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination Address"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

        <!--Cancel Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnCancelPassengerRide"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_red"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
