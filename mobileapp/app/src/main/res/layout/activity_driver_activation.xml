<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical"
        android:padding="16dp">

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="none">

            <!-- New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#364153"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_base"
                android:padding="12dp"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:textColor="@color/app_dark" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="#364153"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_base"
                android:padding="12dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:textColor="@color/app_dark" />

            <!-- Error message -->
            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/design_default_color_error"
                android:textSize="13sp"
                android:gravity="center"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_accent"
                android:text="Confirm"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/tv_verification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Creating your account..."
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_verification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Please wait"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Continue to Login"
            android:textColor="@color/app_dark"
            android:visibility="gone"
            android:paddingHorizontal="32dp"
            android:backgroundTint="@color/app_accent"/>

    </LinearLayout>

</RelativeLayout>
