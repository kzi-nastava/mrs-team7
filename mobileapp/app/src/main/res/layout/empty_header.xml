<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/app_dark"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:elevation="4dp"
    app:contentInsetStart="0dp"
    app:contentInsetLeft="0dp">


<!--        <androidx.appcompat.widget.AppCompatImageButton-->
<!--            android:id="@+id/nav_drawer"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginStart="4dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:scaleType="centerInside"-->
<!--            android:src="@drawable/vec_drawer_open"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            app:tint="@color/white" />-->

    <!-- Brand container: keep horizontal orientation -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/brand_uber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uber"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/brand_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLUS"
            android:textSize="20sp"
            android:textColor="@color/app_accent"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_black"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <!-- Fill remaining space so any other toolbar actions (menu) appear at end -->
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!-- Optional: right-side avatar or actions go here -->
</com.google.android.material.appbar.MaterialToolbar>