<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:paddingBottom="24dp"
    tools:context=".ui.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        tools:context=".ProfileActivity"
        tools:openDrawer="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/header"
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="16dp">

                            <!-- Profile Header Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="24dp"
                                app:cardPreventCornerOverlap="false">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="20dp"
                                    android:gravity="center_vertical">

                                    <!-- Profile image with accent border -->
                                    <FrameLayout
                                        android:layout_width="96dp"
                                        android:layout_height="96dp"
                                        android:layout_marginEnd="16dp"
                                        android:foregroundGravity="center">

                                        <ImageView
                                            android:id="@+id/profile_border_bg"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/profile_border"
                                            android:scaleType="centerCrop" />

                                        <ImageView
                                            android:id="@+id/profile_image"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/img_defaultprofile"
                                            android:contentDescription="Profile picture" />

                                        <!-- small edit button Change!! -->
                                        <ImageButton
                                            android:id="@+id/btn_edit_photo"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="bottom|end"
                                            android:background="@drawable/btn_accent"
                                            android:src="@android:drawable/ic_menu_edit"
                                            app:tint="@color/app_dark"
                                            android:padding="8dp"
                                            android:scaleType="centerInside"
                                            android:contentDescription="Edit photo" />
                                    </FrameLayout>

                                    <!-- Name & Email -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_full_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Andrew Wilson"
                                            android:textSize="22sp"
                                            android:textColor="#364153"
                                            android:fontFamily="@font/poppins_medium"
                                            android:lineHeight="34sp"/>

                                        <TextView
                                            android:id="@+id/tv_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="andrewwilson@email.com"
                                            android:textSize="14sp"
                                            android:textColor="@color/app_text_secondary"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/poppins"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Info Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="6dp"
                                app:cardCornerRadius="24dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Personal Information"
                                        android:textSize="18sp"
                                        android:textColor="@color/app_dark"
                                        android:fontFamily="sans-serif-medium"/>

                                    <!-- First and Last name-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2"
                                        android:layout_marginTop="8dp">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginEnd="8dp">

                                            <LinearLayout
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:orientation="horizontal"
                                                android:layout_marginEnd="8dp">
                                                <androidx.appcompat.widget.AppCompatImageView
                                                    android:layout_width="16dp"
                                                    android:layout_height="16dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:src="@drawable/vec_profile"/>

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="First Name"
                                                    android:fontFamily="@font/poppins"
                                                    android:textSize="12sp"
                                                    android:textColor="#364153"/>
                                            </LinearLayout>

                                            <EditText
                                                android:id="@+id/et_first_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/input_base"
                                                android:padding="12dp"
                                                android:hint="First name"
                                                android:textColor="@color/app_dark"
                                                android:inputType="textPersonName"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_marginStart="8dp">

                                            <LinearLayout
                                                android:layout_height="wrap_content"
                                                android:layout_width="match_parent"
                                                android:orientation="horizontal"
                                                android:layout_marginEnd="8dp">
                                                <ImageView
                                                    android:layout_width="16dp"
                                                    android:layout_height="16dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:src="@drawable/vec_profile"/>
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Last Name"
                                                    android:fontFamily="@font/poppins"
                                                    android:textSize="12sp"
                                                    android:textColor="#364153"/>
                                            </LinearLayout>

                                            <EditText
                                                android:id="@+id/et_last_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/input_base"
                                                android:padding="12dp"
                                                android:hint="Last name"
                                                android:textColor="@color/app_dark"
                                                android:inputType="textPersonName"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <!-- Email -->
                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginEnd="8dp">

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/vec_mail"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Email"
                                            android:fontFamily="@font/poppins"
                                            android:textSize="12sp"
                                            android:textColor="#364153"/>
                                    </LinearLayout>

                                    <EditText
                                        android:id="@+id/et_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/input_base"
                                        android:hint="E-Mail"
                                        android:inputType="textEmailAddress"
                                        android:padding="12dp"
                                        android:textColor="@color/app_dark"/>

                                    <!-- Address -->
                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginEnd="8dp">
                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/vec_location"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Address"
                                            android:fontFamily="@font/poppins"
                                            android:textSize="12sp"
                                            android:textColor="#364153"/>
                                    </LinearLayout>

                                    <EditText
                                        android:id="@+id/et_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/input_base"
                                        android:hint="Address"
                                        android:inputType="textPostalAddress"
                                        android:padding="12dp"
                                        android:textColor="@color/app_dark"/>

                                    <!-- Phone -->
                                    <LinearLayout
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginEnd="8dp">
                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_marginEnd="8dp"
                                            app:srcCompat="@drawable/vec_phone"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Phone Number"
                                            android:fontFamily="@font/poppins"
                                            android:textSize="12sp"
                                            android:textColor="#364153"/>
                                    </LinearLayout>
                                    <EditText
                                        android:id="@+id/et_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/input_base"
                                        android:hint="Phone number"
                                        android:inputType="phone"
                                        android:padding="12dp"
                                        android:textColor="@color/app_dark"/>

                                    <!-- Action Buttons -->
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/btn_change_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_marginTop="12dp"
                                        android:background="@drawable/btn_transparent"
                                        android:text="Change Password"
                                        android:textColor="#4B5563"
                                        android:textAllCaps="false"
                                        android:fontFamily="@font/poppins"
                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="12dp"
                                        android:weightSum="2"
                                        android:gravity="center">

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/btn_update_profile"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="48dp"
                                            android:background="@drawable/btn_accent"
                                            android:text="Update Profile"
                                            android:textColor="@color/app_dark"
                                            android:textAllCaps="false"
                                            android:layout_marginEnd="8dp"
                                            android:fontFamily="@font/poppins"
                                            />

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/btn_cancel"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="48dp"
                                            android:background="@drawable/btn_transparent"
                                            android:text="Cancel"
                                            android:textColor="#4B5563"
                                            android:textAllCaps="false"
                                            android:layout_marginStart="8dp"
                                            android:fontFamily="@font/poppins"
                                            />
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                </ScrollView>

        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            style="@style/AppNavigationViewStyle"
            app:headerLayout="@layout/drawer_header"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/app_dark"
            app:menu="@menu/navigation_menu"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:itemBackground="@color/app_dark"
            android:clipToPadding="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>

